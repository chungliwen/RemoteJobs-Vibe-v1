---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getDb } from '../../lib/db';
import { formatDate, getCategoryLabel, getCoverageLabel } from '../../lib/utils';
import type { JobListing, Company } from '../../lib/db';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/');
}

const db = getDb(Astro.locals);

// Fetch job with company info
const result = await db.prepare(`
  SELECT
    job_listings.*,
    companies.name as company_name,
    companies.website as company_website,
    companies.logo_url as company_logo_url
  FROM job_listings
  LEFT JOIN companies ON job_listings.company_id = companies.id
  WHERE job_listings.id = ?
`).bind(id).first();

if (!result) {
  return Astro.redirect('/');
}

const job = result as any;

// Check if job is viewable (approved and not too old or archived)
if (job.status !== 'approved' || job.visible !== 1) {
  return Astro.redirect('/');
}

const title = `${job.job_title} at ${job.company_name || 'Unknown Company'}`;
---

<BaseLayout title={`${title} | RemoteJobs.com.my`}>
  <div class="container">
    <div class="job-detail">
      <div class="job-header">
        <a href="/" class="back-link">&larr; Back to Jobs</a>
        <h1 class="job-title">{job.job_title}</h1>
        <p class="company-name">{job.company_name || 'Unknown Company'}</p>
      </div>

      <div class="job-meta-grid">
        <div class="meta-item">
          <span class="meta-label">Category</span>
          <span class="badge badge-primary">{getCategoryLabel(job.category)}</span>
        </div>
        <div class="meta-item">
          <span class="meta-label">Coverage</span>
          <span class="badge badge-secondary">{getCoverageLabel(job.coverage)}</span>
        </div>
        <div class="meta-item">
          <span class="meta-label">Job Type</span>
          <span class="text-muted">{job.job_type || 'Remote'}</span>
        </div>
        <div class="meta-item">
          <span class="meta-label">Posted</span>
          <span class="text-muted">{formatDate(job.listing_date)}</span>
        </div>
      </div>

      <div class="job-actions">
        <a
          href={job.listing_url}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-primary btn-large"
        >
          Apply on {job.platform} →
        </a>
        {job.company_website && (
          <a
            href={job.company_website}
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-secondary btn-large"
          >
            Visit Company Website
          </a>
        )}
      </div>

      <div class="job-description">
        <h2>About this job</h2>
        <p class="text-muted">
          This is a remote position posted on {job.platform}.
          Click "Apply" above to view the full job description and submit your application.
        </p>
      </div>

      <div class="job-footer">
        <p class="text-small text-muted">
          Job ID: {job.id} • Source: {job.platform} • Last updated: {formatDate(job.date_scraped)}
        </p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .job-detail {
    max-width: 800px;
    margin: 0 auto;
  }

  .job-header {
    margin-bottom: var(--spacing-xl);
  }

  .back-link {
    display: inline-block;
    margin-bottom: var(--spacing-md);
    color: var(--color-primary);
    font-weight: 500;
  }

  .back-link:hover {
    text-decoration: none;
  }

  .job-title {
    font-size: 2rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  .company-name {
    font-size: 1.25rem;
    color: var(--color-text-muted);
  }

  .job-meta-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: var(--spacing-lg);
    background-color: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  .meta-item {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .meta-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    font-weight: 600;
  }

  .job-actions {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-2xl);
  }

  .btn-large {
    padding: var(--spacing-md) var(--spacing-xl);
    font-size: 1.125rem;
  }

  .job-description {
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
  }

  .job-description h2 {
    font-size: 1.5rem;
    margin-bottom: var(--spacing-md);
  }

  .job-footer {
    text-align: center;
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--color-border);
  }

  @media (max-width: 640px) {
    .job-title {
      font-size: 1.5rem;
    }

    .company-name {
      font-size: 1rem;
    }

    .job-meta-grid {
      grid-template-columns: 1fr;
    }

    .job-actions {
      flex-direction: column;
    }

    .btn-large {
      width: 100%;
      text-align: center;
    }
  }
</style>
